        <Button Grid.Column="8" Grid.ColumnSpan="2" IsEnabled="False" Content="זרוק קוביות" Name="roll_dice" Grid.Row="1" Click="roll_dice_Click"></Button>

        <TextBlock Name="rolld1" Grid.Column="8" Grid.Row="0" Text="rolld1" ></TextBlock>
